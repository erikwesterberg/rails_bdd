<h1>AMAZING READ</h1>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <br>
      <td><%= article.content %></td>
      <br>
      <td><%= article.user.name %></td>
      <br>
    </tr>
    <div class="display">
    
        <td class="button1"><%= link_to "Show", article_path(article) %></td>
        <br>
        <td class="button1"><%= link_to "Edit", edit_article_path(article) %></td>
        <br>
        <td class="button1"><%= link_to "Destroy", article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
    </div>  
    
  <% end %>
        
<td class="button1"><%= link_to 'New Article', new_article_path %></td>


 

 